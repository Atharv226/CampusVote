{
  "name": "campusvote",
  "version": "1.0.0",
  "description": "A secure online voting system for college campuses",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "local": "node start-local.js",
    "local-dev": "nodemon start-local.js",
    "local-full": "concurrently \"npm run client\" \"npm run local-dev\"",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "node index.js"
  },
  "keywords": [
    "voting",
    "campus",
    "elections",
    "college",
    "democracy"
  ],
  "author": "CampusVote Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9"
  }
}
